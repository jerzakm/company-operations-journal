{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "start": "sirv public",
    "validate": "svelte-check",
    "build": "run-p rollup-build build:css",
    "dev": "run-p rollup-dev watch:css",
    "rollup-build": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "watch:css": "postcss src/global.css -o public/build/global.css -w",
    "build:css": "NODE_ENV=production postcss src/global.css -o public/build/global.css"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "postcss-nested": "^4.2.3",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3",
    "tailwindcss": "^1.7.6"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "svelte-spa-router": "^2.2.0"
  }
}
