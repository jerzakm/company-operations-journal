{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "validate": "svelte-check",
    "client:build": "rollup -c",
    "client:dev": "rollup -c -w",
    "watch:css": "postcss src/global.css -o public/client/build/global.css -w",
    "build:css": "NODE_ENV=production postcss src/global.css -o public/client/build/global.css",
    "backend:dev": "cd src/backend && npm run build-backend",
    "backend:serve-dev": "nodemon public/backend.js --config nodemon.json",
    "start": "concurrently \"npm:client:dev\" \"npm:watch:css\" \"npm:backend:dev\" \"npm:backend:serve-dev\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "concurrently": "^5.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-load-config": "^2.1.0",
    "postcss-nested": "^4.2.3",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^1.7.6",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "sirv-cli": "^1.0.0",
    "svelte-spa-router": "^2.2.0"
  }
}
